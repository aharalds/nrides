<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="75dp">

    <TextView
        android:layout_height="match_parent"
        android:layout_width="100dp"
        android:id="@+id/tx_from"
        android:layout_alignParentLeft="true"
        android:text="TEXTI"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceMedium"

        />

    <TextView
        android:layout_height="match_parent"
        android:layout_width="100dp"
        android:id="@+id/tx_to"
        android:layout_toRightOf="@+id/tx_from"
        android:text="TEXTI"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceMedium"


        />

    <TextView
        android:layout_height="match_parent"
        android:layout_width="80dp"
        android:id="@+id/tx_date"
        android:layout_toRightOf="@+id/tx_to"
        android:text="TEXTI"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceMedium"


        />

    <TextView
        android:layout_height="match_parent"
        android:layout_width="60dp"
        android:id="@+id/tx_deptime"
        android:layout_toRightOf="@+id/tx_date"
        android:text="TEXTI"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceMedium"

        />
    <TextView
        android:layout_height="match_parent"
        android:layout_width="40dp"
        android:id="@+id/tx_cost"
        android:layout_toRightOf="@+id/tx_deptime"
        android:text="TEXTI"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceMedium"

        />

    <TextView
        android:layout_height="match_parent"
        android:layout_width="40dp"
        android:id="@+id/tx_seats"
        android:layout_toRightOf="@+id/tx_cost"
        android:text="80"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceMedium"

        />

</RelativeLayout>