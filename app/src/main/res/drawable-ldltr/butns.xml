<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <gradient android:startColor="@color/backhound"
                android:endColor="@color/backhound"
                android:angle="270" />

            <corners android:radius="3dp" />
            <stroke android:width="4px" android:color="@color/backhound" />
        </shape>
    </item>

    <item
        android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >
            <gradient android:startColor="@color/colorWhite"
                android:endColor="@color/colorWhite"
                android:angle="270" />
            <corners android:radius="7dp" />
            <stroke android:width="3px" android:color="@color/colorGray" />
        </shape>
    </item>
</selector>