<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="is.hi.hopur16.nyttapp">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomeScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DisplayRideActivity" />
        <activity android:name=".rideActivity" />
        <activity android:name=".searchActivity" />
        <activity android:name=".DisplayListView" />
        <activity android:name=".RideAdapter" />
        <activity android:name=".homeActivity"/>
        <activity android:name=".LoginActivity" />
        <activity android:name=".SignupActivity" />
        <activity android:name=".RideInfoPopup"
            android:theme="@style/Base.Theme.AppCompat.Dialog">
        </activity>
    </application>

</manifest>